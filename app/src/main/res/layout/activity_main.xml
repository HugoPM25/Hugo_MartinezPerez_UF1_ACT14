<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Quadrat morat -->
    <View
        android:id="@+id/square_purple"
        android:layout_width="240dp"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/square_pink2"
        android:background="#800080" />

    <!-- Quadrat rosa -->
    <View
        android:id="@+id/square_pink2"
        android:layout_width="82dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#FD1492" />

    <!-- Rectangle turquesa -->
    <View
        android:id="@+id/rectangle_turquoise"
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:layout_below="@id/square_purple"
        android:background="#40E0D0" />

    <!-- Quadrat taronja -->
    <View
        android:id="@+id/square_orange"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rectangle_turquoise"
        android:layout_alignParentLeft="true"
        android:background="#FFA500" />

    <!-- Quadrat rosa gran -->
    <View
        android:id="@+id/square_pink"
        android:layout_width="230dp"
        android:layout_height="297dp"
        android:layout_toRightOf="@id/square_orange"
        android:layout_alignTop="@id/square_orange"
        android:background="#FF1493" />

</RelativeLayout>
